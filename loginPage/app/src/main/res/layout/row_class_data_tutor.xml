<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="120dp">


    <LinearLayout
        android:id="@+id/layout_list_tutor"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/round1"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ClassName_rcdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="class name"></TextView>


            <TextView
                android:id="@+id/StudentName_rcdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="student name"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Date_rcdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="date"
                ></TextView>

            <TextView
                android:id="@+id/StartTime_rcdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="start time"
                ></TextView>

            <TextView
                android:id="@+id/EndTime_rcdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="end time"></TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/moreinfo_rcdt"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="more info"
            android:backgroundTint="@color/design_default_color_secondary"
            android:textSize="10sp">

        </Button>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".PastClassMoreInfoTutor">


    <!--    pcmi = past class more info-->

    <LinearLayout
        android:id="@+id/llayout_pastmoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/updatesummmary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/pcmi_classname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="class name: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/pcmi_studentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="student name: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/pcmi_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="date: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/pcmi_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="start time: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/pcmi_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="end time: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/pcmi_price_per_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="price per hour: "
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/pcmi_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="20sp"
            android:text="can be on zoom: "
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/pcmi_inperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="20sp"
            android:text="can be in person: "
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/pcmi_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="20sp"
            android:text="city: "
            android:textColor="@color/white"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pcmi_class_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="class summary:"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/pcmi_class_summaryE"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="add summary here"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/mygray"
                android:textSize="20sp"></EditText>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updatesummmary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/teal_200"
        android:gravity="center"
        android:text="update summary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/whatsappbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llayout_pastmoreinfo">

    </Button>

    <ImageButton
        android:id="@+id/whatsappbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatesummmary"
        app:srcCompat="@drawable/whatsapplogo3" />

</androidx.constraintlayout.widget.ConstraintLayout>